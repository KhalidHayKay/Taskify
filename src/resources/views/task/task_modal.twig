<div class="hidden fixed text-gray-500 flex items-center justify-center overflow-auto z-50 bg-black bg-opacity-40 left-0 right-0 top-0 bottom-0">
    <div id="modal" class="hidden bg-white rounded-lg shadow-2xl p-6 sm:w-fit mx-10 transition ease duration-100 transform">
        <h3 class="font-bold block text-xl mb-2 text-gray-600">Tasks</h3>

        <form action="" class="flex flex-col gap-4">
            <hr class="mb-1">

            <input type="text" name="name" class="w-[300px] p-1 text-[1rem] rounded outline-none border border-gray-200 placeholder:text-gray-4" placeholder="Name">
            {% include "errorDiv.twig" %}
            <input type="text" name="description" class="w-[300px] p-1 text-[1rem] rounded outline-none border border-gray-200 placeholder:text-gray-400" placeholder="Description">
            {% include "errorDiv.twig" %}
            <select name="category" id="category-dropdown" class="w-[300px] p-1 rounded text-[1rem] text-gray-500 outline-none border border-gray-200">
                <option value="" class="text-sm text-gray-900" disabled selected>Category</option>
                {% if categories %}
                    {% for category in categories %}
                        <option value={{ category.id }} class="text-sm">{{ category.name }}</option>  
                    {% endfor %}
                {% else %}
                    <option class="text-red-200 mt-3 text-sm cursur-pointer" disabled>No category</option>
                {% endif %}
            </select>
            {% include "errorDiv.twig" %}
            <input type="datetime-local" id="due-date" name="due_date" class="w-[300px] p-1 text-[1rem] rounded outline-none border border-gray-200 placeholder:text-sm" placeholder="Due date">
            {% include "errorDiv.twig" %}
            
            <hr class="mt-5">
            <div class="text-right space-x-5 flex justify-end">
                <button id="cancel-btn" type="button" class="py-[0.4rem] px-2 text-sm bg-gray-800 text-white flex flex-row-reverse justify-center items-center gap-1 rounded-md transition-colors duration-150 ease-linear focus:outline-none font-bold hover:bg-gray-900 focus:bg-gray-900">
                    Cancel
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                    </svg>
                </button>
                <button id="submit-btn" class="py-[0.4rem] px-2 text-sm bg-green-800 text-white flex flex-row-reverse justify-center items-center gap-1 rounded-md transition-colors duration-150 ease-linear focus:outline-none font-bold hover:bg-green-900 focus:bg-green-900">
                    Save
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                    </svg>
                </button>
            </div>
        </form>
    </div>
</div>