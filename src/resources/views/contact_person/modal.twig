<div class="flex fixed text-gray-500 items-center justify-center overflow-auto z-10 bg-black bg-opacity-40 left-0 right-0 top-0 bottom-0">
	<div id="modal" class="block bg-white rounded-lg shadow-2xl p-6 sm:w-fit mx-10 transition ease duration-100 transform">
		<h3 class="font-bold block text-xl mb-2 text-gray-600">Contact Person</h3>

		<form action="/user/contact_person" method="POST" class="flex flex-col gap-4">
			<hr class="mb-1">

			{{ csrf_form | raw }}
			<input type="text" name="fullname" 
				class="w-[400px] p-1 text-[1rem] rounded outline-none border border-gray-200 placeholder:text-gray-4" 
				placeholder="Fullname"
				value={% if validationErrors %} '{{oldContactPersonData.fullname}}' {% else %} '{{fullname}}' {% endif %}
			>
			<div id="error-div" class="text-red-500 text-center text-[0.7rem] mt-[-0.8rem]">{{validationErrors.fullname | first}}</div>
			<input type="email" name="email" 
				class="w-[400px] p-1 text-[1rem] rounded outline-none border border-gray-200 placeholder:text-gray-4" 
				placeholder="Email"
				value={% if validationErrors %} '{{oldContactPersonData.email}}' {% else %} '{{email}}' {% endif %}
			>
			<div id="error-div" class="text-red-500 text-center text-[0.7rem] mt-[-0.8rem]">{{validationErrors.email | first}}</div>

			<hr class="mt-5">
			<div class="text-right space-x-2 flex justify-end w-full">
				<button id="delete-btn" class="mr-5 py-1 px-1.5 text-sm bg-red-800 text-white flex flex-row-reverse justify-center items-center gap-1 rounded-md transition-colors duration-150 ease-linear focus:outline-none font-bold hover:bg-red-900 active:bg-red-800">
					Delete
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
						<path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"/>
					</svg>
				</button>
				<button id="edit-btn" type="button" class="py-1 px-1.5 text-sm bg-gray-800 text-white flex flex-row-reverse justify-center items-center gap-1 rounded-md transition-colors duration-150 ease-linear focus:outline-none font-bold hover:bg-gray-900 active:bg-gray-800">
					Edit
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
						<path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"/>
					</svg>
				</button>
				{# <button id="cancel-btn" type="button" class="py-1 px-1.5 text-sm bg-gray-800 text-white flex flex-row-reverse justify-center items-center gap-1 rounded-md transition-colors duration-150 ease-linear focus:outline-none font-bold hover:bg-gray-900 active:bg-gray-800">
																																																																																																									Cancel
																																																																																																									<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
																																																																																																										<path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
																																																																																																									</svg>
																																																																																																								</button> #}
				<button id="save-btn" class="py-1 px-1.5 text-sm bg-green-800 text-white flex flex-row-reverse justify-center items-center gap-1 rounded-md transition-colors duration-150 ease-linear focus:outline-none font-bold hover:bg-green-900 active:bg-green-800">
					Save
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
						<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
					</svg>
				</button>
			</div>
		</form>
	</div>
</div>
