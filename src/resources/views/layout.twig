<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta id="csrf-name-field" name={{ csrf.keys.name }} content={{ csrf.name }}>
    <meta id="csrf-value-field" name={{ csrf.keys.value }} content={{ csrf.value }}>
    <title>{% block title %}Taskify{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('build/images/logo.png') }}">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        {{ encore_entry_link_tags('layout') }}
    {% endblock %}
    
    {% block javascripts %}
        {{ encore_entry_script_tags('app', null, '', {defer: true}) }}
        {{ encore_entry_script_tags('layout', null, '', {defer: true})}}
    {% endblock %}
</head>
<body class="bg-[#f6f6f6] h-[100vh] px-5 lg:px-[5rem]">
    <header class="grid py-2 sm:py-3 lg:py-5">
        <div id="logo" class="w-1/4 ml-2">
            <a class="flex items-center text-gray-700 text-2xl md:text-3xl lg:text-4xl tracking-wider no-underline hover:no-underline font-bold" href="">
                <img class="w-8 h-8 md:h-10 md:w-10 lg:h-12 lg:w-12" src="{{ asset('build/images/logo.png') }}" alt="logo">
                <span class="md:ml-[-2px] lg:ml-[-5px]">Task<span class="text-blue-700">ify</span></span>
            </a>
        </div>

        <nav id="nav-content" class="flex-grow sm:flex lg:items-center">
            <ul class="list-reset flex flex-1 gap-5 md:gap-10 items-center justify-center sm:justify-end sm:px-4">
                <li class="my-2 md:my-0 md:text-[18px] lg:text-[21px]">
                    <a href="/" class="block py-1 md:py-3 align-middle {# text-gray-500 #}  text-gray-700 no-underline hover:text-gray-700 transition  duration-300 ease-out">
                        Dashboard
                    </a>
                </li>
                <li class="my-2 md:my-0 md:text-[17px] lg:text-xl">
                    <a href="/tasks" class="block py-1 md:py-3 align-middle text-gray-500 no-underline hover:text-gray-900 transition duration-300 ease-out">
                        Tasks
                    </a>
                </li>
                <li class="my-2 md:my-0 md:text-[17px] lg:text-xl">
                    <a href="/categories" class="block py-1 md:py-3 align-middle text-gray-500 no-underline hover:text-gray-900 transition duration-300 ease-out">
                        Categories
